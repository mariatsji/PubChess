<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
	    android:id="@+id/playerDetailsTitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:text="@string/playersDetailsTitle"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/playerDetailsInnerPane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playerDetailsBackButton"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/playerDetailsTitle"
        android:scrollbars="vertical"
        android:layout_marginTop="21dp" >
    </ScrollView>
    
    <Button
        android:id="@+id/playerDetailsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="playersBackButton"
        android:text="@string/playerDetailsBackButton" />


</RelativeLayout>